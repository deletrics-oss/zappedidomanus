rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images for menu items, categories, and restaurant logo
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User profile images
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Restaurant assets (logo, banners, etc)
    match /restaurant/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
